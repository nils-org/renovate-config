{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "dependencyDashboard": false,
  "commitMessagePrefix": "(maint)",
  "labels": ["dependencies"],
  "cake": {
    "addLabels": ["cake", "build"]
  },
  "github-actions": {
    "addLabels": ["github_actions", "build"]
  },
  "nuget": {
    "addLabels": [".NET"]
  },
  "packageRules": [
    {
      "matchPackageNames": ["cake.tool"],
      "enabled": false
    }
  ]
}
