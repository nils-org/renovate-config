{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "dependencyDashboard": false,
  "commitMessagePrefix": "(maint)",
  "labels": ["dependencies"],
  "cake": {
    "addLabels": ["cake", "build"]
  },
  "github-actions": {
    "addLabels": ["github_actions"]
  },
  "nuget": {
    "addLabels": [".NET"]
  },
  "packageRules": [
    {
      "matchPackageNames": ["cake.tool"],
      "enabled": false
    },
    {
      "matchPackagePrefixes": ["actions/"],
      "labels": ["build"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
     {
      "matchPackageNames": [
        "Spectre.Console",
        "Spectre.Console.Cli",
        "Spectre.Console.Testing",
        "Spectre.Console.ImageSharp",
        "Spectre.Console.Analyzer"
      ],
      "groupName": "Spectre.Console",
      "groupSlug": "spectre-console"
    }
  ]
}
